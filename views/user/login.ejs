<%-include('../layouts/head.ejs')%> 
 
 
    <section>
      <link rel="stylesheet" href="/user/css/logsample.css">
    <div class="container d-md-flex justify-content-center">
      <form action="/login" method="post" class="col-md-4 border text-center rounded border-5 h-100 d-flex flex-column solid border-black   justify-content-center align-items-center ">
        <h2 class="my-5 text-light">Login</h2>
        <div class="input-box mb-2 ">
          <span class="icon "><ion-icon name="mail" ></ion-icon></span>
          <input type="email"  class="form-control bg-transparent border-0" name="Email" required />
          <label>Email</label>

        </div>
        <div class="input-box my-2">
          <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
          <input type="password" class="form-control bg-transparent border-0"  name="password" required />
          <label>Password</label>
        </div>
        <div class="remember-forgot my-2">
          <a href="/forgotPassword">Forgot Password!</a>
        </div>
        <% if(locals.err_msg) { %>
              <p class="text-danger my-2"><%= err_msg %></p>
              <% } %>
        <button type="submit" class=" btn btn-lg btn-outline-light text-center ">Login</button>
        <div class="register-link my-3">
          <p>Don't have an account?<a href="/signup">Register</a></p>
        </div>
      </form>
    </div>
    </section>
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
  
