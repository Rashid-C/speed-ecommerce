<link rel="stylesheet" href="/user/css/MyOrder.css" />
<link rel="stylesheet" href="/user/css/MyOrder2.css">
<div>
  <a href="/"><img src="/img/logo.png" alt=""></a>
</div>
<%if(orderData[0]){%>
<% orderData.forEach((orderData)=>{ %>
<div class="container my-5 flex-column justify-content-center">
  

  <div class="card px-2">
    <div class="card-body">
      <div class="media flex-column flex-sm-row">
        <div class="media-body">
          <h5 class="bold"><%= orderData.productDetails[0].name %></h5>
          <p class="text-muted">Size:<%= orderData.productDetails[0].size %></p>
          <h4 class="mt-3 mb-4 bold">
            <span class="mt-5">&#x20B9;</span><%=
            orderData.totalAmount %><span class="small text-muted">
              via (<%= orderData.paymentMethod %>)
            </span>
          </h4>
          <p class="text-muted">
            <p class="text-muted"> Order ID  <span class="font-weight-bold text-dark"><%= orderData.orderItem %></span></p> 

            Order Status on: <span class="Today"><%= orderData.orderStatus %></span><br>
            Order Dated on: <span class="Today"><%= orderData.createdAt %></span>

          </p>
          <a href="/orderReview">
            <button type="button" class="btn btn-outline-primary d-flex">
              Review Details
            </button>

            <% if (orderData.orderStatus == "Shipping" || orderData.orderStatus == "Pending") { %>
              <a href="/userOrderStatusChange/<%= orderData._id %>">
                <button type="button" class="btn btn-outline-danger d-flex">
                  Cancel This Order
                </button>
              </a>
            <% } %>
          </a>
        </div>
        <img
        
          class="align-self-center img-fluid"
          src="<%=  orderData.productDetails[0].image[0].url %>"
          width="180 "
          height="180"
        />
      </div>
    </div>
  </div>

</div>
<%})%>
<%}else{%>
  <h1 class="text-danger font-weight-bold">ORDER DATA IS EMPTY</h1>

  <%}%>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
  integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
  crossorigin="anonymous"
/>


