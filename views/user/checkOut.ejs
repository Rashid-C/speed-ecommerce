<div class="page-area cart-page spad">
  <div class="container">
    <form
     action='/validateChechout'
     method="post"
      id="checkoutPayment"
      class="checkout-form"
    >
      <div class="row">
        <div class="col-lg-6">
          <h2 class="checkout-title"><strong>BILLING ADDRESS</strong></h2>

          <!-- Radio button start -->
          <label class="checkout-title">
           <h4> <strong>Choose Your Billing Address</strong></h4>
          </label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="exampleRadios1"
              name="profileAddess"
            />
            <label
              class="form-check-label text-white pb-5"
              for="exampleRadios1"
            >
              PROFILE ADDRESS
            </label>
            <% if(locals.err_msg) { %>
            <p class="text-danger text-uppercase fs-1 fw-bold">
              <%= err_msg %>
            </p>
            <% } %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <input type="text" placeholder="First Name *" name="firstName" />
            </div>
            <div class="col-md-6">
              <input type="text" name="lastname" placeholder="Last Name *" />
            </div>
            <div class="col-md-12">
              <input
                type="text"
                name="house"
                placeholder="House Name/Flate No:"
              />

              <input type="email" name="email" placeholder="Email" />

              <input type="text" name="street" placeholder="Street" />
              <input type="text" name="city" placeholder="City" />
              <input type="text" name="district" placeholder="District" />
              <input type="text" name="state" placeholder="State" />
              <input type="number" name="pin" placeholder="PIN" />
              <input type="tel" name="mobile" placeholder="Mobile" />
            </div>
          </div>
          <% if(locals.err_msg) { %>
          <p class="text-danger text-uppercase fs-1 fw-bold"><%= err_msg %></p>
          <% } %>
        </div>
        <div class="col-lg-6">
          <div class="order-card">
            <div class="order-details">
              <div class="od-warp">
                <h4 class="checkout-title">Your order</h4>
                <table class="order-table">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% product.forEach((product)=>{ %>
                    <tr>
                      <td><%=product.productDetails.name%></td>

                      <td><%=product.productDetails.price %></td>
                      <td>
                        <input
                          name="ids"
                          value="<%=product.productDetails._id%>"
                          hidden
                        />
                      </td>
                    </tr>
                    <% }) %>

                    <tr class="cart-subtotal">
                      <td>Shipping</td>
                      <td>Free</td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr class="order-total">
                      <th>Total</th>
                      <th><input  hidden value="<%=sum%>" name="sum"  type="text" />
                           <p id="sum">
                            <%=sum%>
                           </p>
                      </th>
                         
                    </tr>

                      <tr>
                       
                      <th>
                      
                         <button hx-post="/applyCoupon" hx-vals=".coupon-input" hx-target="#sum "  hx-swap="innerHTML">Apply Coupon</button>

                         <!-- <div id="result"></div> -->

                      </th>
                      <th>
                      
                        <div class="input-group">
                          <input type="text" name="couponDetails" id="couponInput" class="form-control" placeholder="Enter your Coupon"  >
                        
                        </div>
                      </th>
                   
                    </tr>
                  </tfoot>
                </table>
              </div>

              <div id="paymentmethod">
                <div class="pm-item">
                  <input type="radio" name="payment" value="cod" />
                  <img style="height: 2.5rem;width: 3.5rem;" src="/img/cod img 1.jpg" alt="">
                  <label for="two">Cash on delievery</label>
                </div>
                <div class="pm-item">
                  <input type="radio" name="payment" value="onlinePayment" />
                  <img  style="height: 2.5rem;width: 3.5rem;" src="/img/cards/2.png" alt="">
                  <label for="three">Online Payment</label>
                </div>
              </div>
            </div>
            <button type="submit"  class="site-btn btn-full">
              Place Order
            </button>
            <% if(locals.err_msg) { %>
            <p class="text-danger text-uppercase fs-1 fw-bold">
              <%= err_msg %>
            </p>
            <% } %>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
