<%- include('../layouts/adminpartial.ejs') %>
<script src="/js/editProductValidation.js" defer></script>

<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4 mt-5 ">
    <div class="row g-0 align-items-center d-flex justify-content-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center ">
            <h2 class="fw-bold mb-5">Edit_product</h2>
            <form action="/admin/editproduct/<%=productE._id%>" method="post"  enctype="multipart/form-data" onsubmit="return editProductValidation(this)" > 

              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input type="name" id="name2" name="name" placeholder="Name of the product"  value="<%=productE.name%>" class="form-control" />
                    <p id="ProductNameError" class="text-danger"></p>
                    <label class="form-label" for="name"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input type="brand" id="brand" name="brand" placeholder="Brand"   value="<%=productE.brand%>" class="form-control" />
                    <p id="brandNameError" class="text-danger"></p>
                    <label class="form-label" for="brand"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input type="text" id="description" name="description" value="<%=productE.description%>"  placeholder="Description" class="form-control" />
                    <p id="descriptionNameError" class="text-danger"></p>
                    <label class="form-label" for="description"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input type="number" id="stock" name="stock" placeholder="Stock" value="<%=productE.stock%>"  class="form-control" />
                    <p id="stockNameError" class="text-danger"></p>
                    <label class="form-label" for="stock"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline mb-4">
                    <!-- <input class="form-control"  placeholder="Category" id="category" required name="category"> -->
                    
                  <select name="category" class="form-select" required aria-label="Default select example">
                  <option disabled selected>Category</option>
                  <%Category.forEach((Data)=>{%>
                    <option><%=Data.category%></option>
                   
                    <%})%>
                  </select>
               
                  
                  </div>
                </div>
               
          
                
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input type="number"  id="price" name="price" placeholder="Price" value="<%=productE.price%>"  class="form-control" />
                    <p id="priceNameError" class="text-danger"></p>

                    <label class="form-label" for="price"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input type="number" id="size" name="size" placeholder="Size" value="<%=productE.size%>"  class="form-control" />
                    <p  id="sizeNameError" class="text-danger"></p>
                    <label class="form-label" for="size"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="d-flex justify-content-between" style="width: 190px;">
                    <!-- <script>
                      
                      alert("<%=productE.image.length%>")
                    </script> -->
                    <%for(let i=0;i<productE.image.length;i++){%>
                    <img class="img-fluid" src="<%=productE.image[i].url%>" alt="">
                    <%}%>
                  </div>
                  <div class="form-outline">
                    <input type="file" id="image" name="image" placeholder="Images"   required  class="form-control"    multiple/>
                    <label class="form-label" for="image"></label><br>
                  </div>
                </div>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Submit
              </button>
            </form >
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>